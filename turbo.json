{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["VITE_API_BASE_URL", "VITE_API_TIMEOUT"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["VITE_API_BASE_URL", "VITE_API_TIMEOUT"]
    }
  }
}
